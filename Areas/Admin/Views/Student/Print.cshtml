@model GuidanceConsultancy.Areas.Admin.Models.StudentViewModel.StudentDetailViewModel
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Print</title>



