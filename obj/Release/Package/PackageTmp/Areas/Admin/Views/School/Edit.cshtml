@model GuidanceConsultancy.Areas.Admin.Models.SchoolViewModel.CreateEditSchoolViewModel

@{
    ViewBag.Title = "Edit";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayoutPage.cshtml";
}

<style>

    .field-validation-error {
        color: red;
    }
</style>

<!-- start page title -->

<!-- end page title -->
<div class="row">
    <div class="col-lg-12">
        <div class="card">
            <div class="card-header">
                <div class="row">

                    <div class="col-sm-6 col-10 mb-md-4 mt-2 mb-xl-0 mb-0">
                        <h4 class="card-title">Edit School</h4>
                    </div>
                    <div class="col-sm-6 col-2">
                        <div class="d-flex align-items-center justify-content-md-end">
                            <div class="pr-1 mb-3 mb-xl-0">
                                <a href="@Url.Action("Index","School")" class="btn btn-danger btn-rounded btn-icon plus-btn">
                                    <i class="mdi mdi-close"></i>
                                </a>

                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="card-body p-4">

                <div class="row">
                    <div class="col-lg-12">
                        <div>

                            @using (Html.BeginForm("Edit", "School", FormMethod.Post))
                            {<div class="row">
                                    <div class="col-md-12">
                                        <div class="mb-3">
                                            @Html.HiddenFor(m => m.Id)
                                            @Html.LabelFor(m => m.Name, "School Name", new { @class = "form-label" })
                                            @Html.TextBoxFor(m => m.Name, new { @class = "form-control", @id = "formrow-firstname-input", @placeholder = "Enter School Name" })
                                            @Html.ValidationMessageFor(m => m.Name)
                                        </div>
                                    </div>
                                    <div class="col-md-6">
                                        <div class="mb-3">

                                            @Html.LabelFor(m => m.SchoolTypeId, "School Type", new { @class = "form-label" })
                                            @Html.DropDownListFor(m => m.SchoolTypeId, Model.SelectSchoolTypeList, "select", new { @class = "form-control" })
                                            @Html.ValidationMessageFor(m => m.SchoolTypeId)
                                        </div>
                                    </div>
                                    <div class="col-md-6">
                                        <div class="mb-3">

                                            @Html.LabelFor(m => m.SchoolMediumId, "School Medium", new { @class = "form-label" })
                                            @Html.DropDownListFor(m => m.SchoolMediumId, Model.SelectSchoolMediumList, "select", new { @class = "form-control" })
                                            @Html.ValidationMessageFor(m => m.SchoolMediumId)
                                        </div>
                                    </div>

                                    <div class="mt-4">

                                        <button type="submit" class="btn btn-primary w-md">Submit</button>
                                    </div>
                                </div>
                            }
                        </div>
                    </div>

                </div>
            </div>
        </div>
    </div>
</div>
<!-- End Form Layout -->
