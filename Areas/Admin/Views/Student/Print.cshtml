    <style>
             .table-result {
                 border: 1px solid #000 !important;
                 border-width: 1px 0 0 1px !important;
             }

            .table-result tr> th, td {
                border: 1px solid #000 !important;
                border-width: 0 1px 1px 0 !important;
            }

       

        }
    </style>

</head>
<body>


    @{
        var lblHeading = "";
        var lblName = "";
        var lblFatherName = "";
        var lblMobileNo = "";
        var lblGender = "";
        var lblClass = "";
        var lblSchoolType = "";
        var lblSchool = "";
        var lblSrNo = "";
        var lblSubTest = "";
        var lblObtainScore = "";
        var lblStenScore = "";
        var lblPerformance = "";
        var lblHigh = "";
        var lblMedium = "";
        var lblLow = "";
        var lblAptitudeProfile = "";
        var lblSuggestion = "";
        var lblTeacherSign = "";


        if (Model.SchoolMediumId == 1)
        {
            lblHeading = "एप्टीट्यूड टेस्ट रिपोर्ट शीट";
            lblName = "नाम";
            lblFatherName = "पिता का नाम";
            lblMobileNo = "मोबाइल न.";
            lblGender = "लिंग";
            lblClass = "कक्षा";
            lblSchoolType = "विद्यालय का प्रकार";
            lblSchool = "विद्यालय";
            lblSrNo = "क्रम संख्या";
            lblSubTest = "उप - परीक्षण";
            lblObtainScore = "प्राप्त अंक";
            lblStenScore = "स्टेन स्कोर";
            lblPerformance = "प्रदर्शन";
            lblHigh = "उच्च";
            lblMedium = "औसत";
            lblLow = "निम्न";
            lblAptitudeProfile = "अभिक्षमता प्रोफाइल";
            lblSuggestion = "सुझाव / टिप्पणी";
            lblTeacherSign = "शिक्षक के हस्ताक्षर";

        }
        else
        {
            lblHeading = "Aptitude Test Report Sheet";
            lblName = "Name";
            lblFatherName = "Father Name";
            lblMobileNo = "Contact No";
            lblClass = "Gender";
            lblSchoolType = "School Type";
            lblSchool = "School";
            lblSrNo = "Sr No.";
            lblSubTest = "Sub Test";
            lblObtainScore = "Obtained Marks";
            lblStenScore = "Sten Score";
            lblPerformance = "Performance";
            lblHigh = "High";
            lblMedium = "Average";
            lblLow = "Low";
            lblAptitudeProfile = "Aptitude Profile";
            lblSuggestion = "Suggestions / Remark";
            lblTeacherSign = "Teacher Signature";
        }
        <div class="table">
            <table width="100%" style="border-bottom:1px solid #000;">
                <tr width="100%">
                    <td style="border-style:none !important;"><img src="~/Assets/admin/img/logo.png" width="70%" /></td>
                    <td style="border-style:none !important;">
                        101-02, Joshi Complex, Near Heera Nagar Pulia, Haldwani, Uttarakhand <br />
                        info@dishaguidance.com | www.dishaguidance.com <br />+91-9719146010, 05946-354582
                    </td>
                </tr>

            </table>
            <table width="100%">
                <tr width="100%" style="text-align: center;">
                    <td style="text-align: center; font-size: 20px; border-style: none !important;"><strong>@lblHeading</strong></td>
                </tr>

            </table>


            <table width="100%">
                <tr>
                    <td style="border-style:none !important;"><strong>@lblName</strong> : @Model.Name (@Model.Gender)</td>
                    <td style="border-style:none !important;"><strong>@lblFatherName</strong> : @Model.FatherName</td>
                    <td style="border-style:none !important;"><strong>@lblMobileNo</strong> : @Model.ContactNo</td>
                </tr>
                <tr>
                    <td style="border-style:none !important;"><strong>@lblClass</strong> : @Model.Class</td>
                    <td style="border-style:none !important;"><strong>@lblSchoolType</strong> : @Model.SchoolType</td>
                    <td style="border-style:none !important;"><strong>@lblSchool</strong> : @Model.School</td>
                </tr>
            </table>

            <table class="table-result" style="width:100%;">
                <thead>
                    <tr>
                        <th rowspan="2">@lblSrNo</th>
                        <th rowspan="2">@lblSubTest</th>
                        <th rowspan="2">@lblObtainScore</th>
                        <th rowspan="2">@lblStenScore</th>
                        <th colspan="3">@lblPerformance</th>

                    </tr>
                    <tr>
                        <th>@lblHigh</th>
                        <th>@lblMedium</th>
                        <th>@lblLow</th>
                    </tr>
                </thead>
                <tbody style="text-align:center;">
                    @if (Model.StudentResultList != null)
                    {
                        if (Model.StudentResultList.Count > 0)
                        {
                            int srNo = 0;
                            foreach (var items in Model.StudentResultList)
                            {
                                <tr>

                                    <td>@(srNo+=1)</td>
                                    <td>@items.SubTest</td>
                                    <td>@items.ScoreObtained</td>
                                    <td>@items.StenScore</td>
                                    @if (items.Performance == "High")
                                    {
                                        <td><img src="~/Assets/admin/img/correct.png" /></td>
                                        <td></td>
                                        <td></td>
                                    }
                                    else if (items.Performance == "Average")
                                    {
                                        <td></td>
                                        <td><img src="~/Assets/admin/img/correct.png" /></td>
                                        <td></td>
                                    }
                                    else if (items.Performance == "Low")
                                    {
                                        <td></td>
                                        <td></td>
                                        <td><img src="~/Assets/admin/img/correct.png" /></td>
                                    }
                                    else
                                    {
                                        <td></td>
                                        <td></td>
                                        <td></td>

                                    }

                                </tr>
                            }
                        }
                    }
                </tbody>



            </table>

            <div style="text-align:center;"><img src="@Model.BarChartImagePath" width="100%" height="300px;" /></div>

            <table width="100%;">
                <tr>
                    <td style="text-align: center; font-size: 20px; border-style: none !important;"><strong>@lblAptitudeProfile</strong></td>
                </tr>

                <tr>
                    <td style="font-size: 18px; border-style: none !important;"><strong>@lblSuggestion</strong></td>
                </tr>

                <tr>
                    <td style="border-style:none !important;">
                        @Html.Raw(WebUtility.HtmlDecode(@Model.Suggestions))
                    </td>
                </tr>

                <tr>
                    <td style="border-style:none !important; text-align: right; font-size: 18px; padding-top:40px;"><strong>@lblTeacherSign</strong></td>
                </tr>

            </table>

        </div>

    }



    <script src="~/Assets/admin/libs/jquery/jquery.min.js"></script>
    @*<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.3.1/jquery.min.js"></script>*@
    <script type="text/javascript">

        $(document).ready(function () {
            window.print();
        });

    </script>
</body>
</html>
